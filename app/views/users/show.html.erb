<body>
<div class="container"> 
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", size: "100x100" %>
      <table class="table table-striped">
        <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
        </tbody>
      </table>
      <%= link_to  edit_user_path(current_user), class:"btn btn-default edit" do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
      
      <%= render 'books/new', book: @book %>
    </div>
    
    <div class="col-xs-9">
      <h2 class="books-title">Books</h2>
      <table class="table table-striped">
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Opinion</th>
              </tr>
          <thead>
          <tbody>
          <% @user.books.each do |book| %>
              <tr class="roop">
                  <%= link_to do %>
                  <td class="roop2"><%= attachment_image_tag book.user, :profile_image, fallback: "no-image.png", size: "40x40" %></td>
                  <% end %>
                  <td class="roop2"><%= link_to book.title, book_path(book.id) %></td>
                  <td class="roop2"><%= book.body %></td>
              </tr>
          <% end %>
          </tbody>
      </table>
      </div
      </div>
      </div>
      <p class="copy-right">CopyRight Infratop.inc</p>
</div>
</body>