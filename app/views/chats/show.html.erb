<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h2>
            <table class="message table">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
                </tr>
              </thead>
              <% @chats.each do |chat| %>
                <% if chat.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;", class= "form-control"><%= chat.message %></p>
                    </th>
                    <th></th>
                  </tr>
                </tbody>
                <% else %>
                <tbody>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;", class= "form-control"><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>
            <%= form_with model: @chat do |f| %>
                <div class="row">
                  <div class="col-md-10">
                    <%= f.text_field :message, class: "form-control w-100" %>
                  </div>
                  <div class="col-md-2 text-right">
                    <%= f.hidden_field :room_id %>
                    <%= f.submit "送信", class: "btn btn-success" %>
                  </div>
                </div>
            <% end %>
        </div>
    </div>
</div>